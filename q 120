#include <stdio.h>
#include <ctype.h>  // for toupper() and tolower() functions

int main() {
    char str[200];
    int i;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // read string with spaces

    // Convert entire string to lowercase first
    for (i = 0; str[i] != '\0'; i++) {
        str[i] = tolower(str[i]);
    }

    // Convert first letter to uppercase if itâ€™s alphabetic
    if (str[0] >= 'a' && str[0] <= 'z') {
        str[0] = toupper(str[0]);
    }

    // Convert first letter after '.', '?', or '!' to uppercase
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] == '.' || str[i] == '?' || str[i] == '!') {
            int j = i + 1;
            // Skip spaces after punctuation
            while (str[j] == ' ')
                j++;
            if (str[j] >= 'a' && str[j] <= 'z')
                str[j] = toupper(str[j]);
        }
    }

    printf("Sentence case: %s", str);
    return 0;
}
