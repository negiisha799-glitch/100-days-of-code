#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    int i;

    // Input full name
    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline character
    name[strcspn(name, "\n")] = '\0';

    printf("Initials: ");

    // Print first character if it is not a space
    if(name[0] != ' ') {
        printf("%c", name[0]);
    }

    // Traverse the name to find initials after spaces
    for(i = 0; name[i] != '\0'; i++) {
        if(name[i] == ' ' && name[i+1] != ' ' && name[i+1] != '\0') {
            printf("%c", name[i+1]);
        }
    }

    printf("\n");

    return 0;
}
