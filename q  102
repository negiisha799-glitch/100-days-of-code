#include <stdio.h>

// Function to find the ceil index
int findCeilIndex(int arr[], int n, int x) {
    int start = 0, end = n - 1;
    int result = -1;

    while (start <= end) {
        int mid = (start + end) / 2;

        if (arr[mid] >= x) {
            result = mid;      // potential ceil found
            end = mid - 1;     // search left for smaller index
        } else {
            start = mid + 1;   // move right
        }
    }

    return result;
}

int main() {
    int n, x;

    // Input array size
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Input sorted array
    printf("Enter elements (sorted): ");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input x
    printf("Enter x: ");
    scanf("%d", &x);

    int ceilIndex = findCeilIndex(arr, n, x);

    if (ceilIndex == -1) {
        printf("-1\n");
    } else {
        printf("Ceil index: %d\n", ceilIndex);
    }

    return 0;
}

