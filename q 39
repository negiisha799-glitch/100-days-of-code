#include <stdio.h>

int main() {
    int num, remainder, product = 1;
    int hasOddDigit = 0;  // To check if there is at least one odd digit

    // Input the number
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    int originalNum = num;

    // Loop to calculate product of odd digits
    while (num != 0) {
        remainder = num % 10; // Extract last digit

        if (remainder % 2 != 0) { // Check if digit is odd
            product *= remainder;
            hasOddDigit = 1;
        }

        num /= 10; // Remove last digit
    }

    if (hasOddDigit)
        printf("The product of odd digits of %d is %d\n", originalNum, product);
    else
        printf("There are no odd digits in %d\n", originalNum);

    return 0;
}
