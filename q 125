#include <stdio.h>

int main() {
    FILE *fp;
    char filename[100];
    char text[200];

    // Take file name input from the user
    printf("Enter the filename to open in append mode: ");
    scanf("%s", filename);
    getchar();  // clear the newline character from input buffer

    // Open file in append mode
    fp = fopen(filename, "a");
    if (fp == NULL) {
        printf("Error: Could not open file %s\n", filename);
        return 1;
    }

    // Take a new line of text from the user
    printf("Enter a new line of text to append:\n");
    fgets(text, sizeof(text), stdin);

    // Append the text to the file
    fputs(text, fp);

    // Close the file
    fclose(fp);

    printf("Text successfully appended to %s\n", filename);

    return 0;
}
