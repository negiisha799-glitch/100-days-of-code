#include <stdio.h>

// Function to find GCD using Euclidean Algorithm
int gcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int num1, num2, lcm, hcf;

    // Input two numbers
    printf("Enter two positive integers: ");
    scanf("%d %d", &num1, &num2);

    // Find HCF/GCD first
    hcf = gcd(num1, num2);

    // Calculate LCM using the formula
    lcm = (num1 * num2) / hcf;

    printf("The LCM of %d and %d is %d\n", num1, num2, lcm);

    return 0;
}
