#include <stdio.h>

int main() {
    int n, i;
    int arr[100];
    
    printf("Enter number of elements: ");
    scanf("%d", &n);
    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    int s = 0;       // start index
    int e = n - 1;   // end index
    
    // Reverse logic
    while(s < e) {
        int temp = arr[s];
        arr[s] = arr[e];
        arr[e] = temp;
        
        s = s + 1;
        e = e - 1;
    }
    
    printf("Reversed array:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
