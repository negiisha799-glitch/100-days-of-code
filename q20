#include <stdio.h>

int main() {
    int dayNum;

    // Input number
    printf("Enter a number: ");
    scanf("%d", &dayNum);

    // Reduce number to 1-7 range
    dayNum = dayNum % 7;
    if (dayNum == 0) dayNum = 7; // If divisible by 7, map to Sunday

    // Display day using switch-case
    switch(dayNum) {
        case 1:
            printf("Monday\n");
            break;
        case 2:
            printf("Tuesday\n");
            break;
        case 3:
            printf("Wednesday\n");
            break;
        case 4:
            printf("Thursday\n");
            break;
        case 5:
            printf("Friday\n");
            break;
        case 6:
            printf("Saturday\n");
            break;
        case 7:
            printf("Sunday\n");
            break;
        default:
            printf("Invalid input!\n");
    }

    return 0;
}
