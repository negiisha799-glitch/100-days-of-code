#include <stdio.h>

int main() {
    long num;
    int digitCount[10] = {0}; 
    int i, maxCount = 0, mostFrequentDigit;

    printf("Enter an integer number: ");
    scanf("%ld", &num);

    if(num < 0) {
        num = -num;
    }

    while(num > 0) {
        int digit = num % 10;
        digitCount[digit]++;
        num /= 10;
    }

    for(i = 0; i < 10; i++) {
        if(digitCount[i] > maxCount) {
            maxCount = digitCount[i];
            mostFrequentDigit = i;
        }
    }

    printf("The digit that occurs the most is %d (occurs %d times)\n", mostFrequentDigit, maxCount);

    return 0;
}
