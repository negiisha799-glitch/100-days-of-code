#include <stdio.h>

int main() {
    int n, i;
    long long fact = 1;   

    
    printf("Enter a number: ");
    scanf("%d", &n);

    
    if (n < 0) {
        printf("Factorial of a negative number doesn't exist.\n");
    } 
    else {
        
        for (i = 1; i <= n; i++) {
            fact = fact*i;
        }

        
        printf("Factorial of %d = %lld\n", n, fact);
    }

    return 0;
}


recursion version

#include <stdio.h>

long long factorial(int n) {
    if (n == 0 || n == 1)
        return 1;
    else
        return n * factorial(n - 1);
}

int main() {
    int n;

    printf("Enter a number: ");
    scanf("%d", &n);

    printf("Factorial of %d = %lld\n", n, factorial(n));

    return 0;
}
