#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Replace spaces with hyphens
    while(str[i] != '\0' && str[i] != '\n') {
        if(str[i] == ' ') {
            str[i] = '-';
        }
        i++;
    }

    // Print the modified string
    printf("Modified string: %s\n", str);

    return 0;
}
