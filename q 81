#include <stdio.h>

int main() {
    char str[100];
    int count = 0;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // safer than gets()

    // Count characters manually
    while(str[count] != '\0' && str[count] != '\n') {
        count++;
    }

    printf("The number of characters in the string is: %d\n", count);

    return 0;
}
