#include <stdio.h>
#include <ctype.h>  // for toupper()

int main() {
    FILE *fin, *fout;
    char ch;

    // Open input file in read mode
    fin = fopen("input.txt", "r");
    if (fin == NULL) {
        printf("Error: Could not open input.txt for reading.\n");
        return 1;
    }

    // Open output file in write mode
    fout = fopen("output.txt", "w");
    if (fout == NULL) {
        printf("Error: Could not open output.txt for writing.\n");
        fclose(fin);
        return 1;
    }

    // Read characters one by one and convert to uppercase
    while ((ch = fgetc(fin)) != EOF) {
        fputc(toupper(ch), fout);
    }

    printf("File conversion successful! Output saved in output.txt\n");

    // Close both files
    fclose(fin);
    fclose(fout);

    return 0;
}
