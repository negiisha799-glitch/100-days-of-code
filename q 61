#include <stdio.h>

int main() {
    
    int n, i, data, a[100];
    
    printf("Enter number of elements: ");
    scanf("%d", &n);
    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
    
    printf("Enter element to search: ");
    scanf("%d", &data);
    
    for(i = 0; i < n; i++) {
        if(a[i] == data) {
            printf("Element found at index: %d\n", i);
            return 0;   // exit after finding
        }
    }
    
    printf("Element not found!\n");
    
    return 0;
}
