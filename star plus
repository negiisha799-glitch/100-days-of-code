#include <stdio.h>

int main() {
    int n, i, j;
    printf("Enter an odd number for size: ");
    scanf("%d", &n);

    int mid = n / 2;  // middle index

    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            if (i == mid || j == mid) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
