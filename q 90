#include <stdio.h>

int main() {
    char str[100];
    int i = 0;
    char ch;

    
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    while(str[i] != '\0' && str[i] != '\n') {
        ch = str[i];
        if(ch >= 'a' && ch <= 'z') {
            str[i] = ch - 32;  // convert to uppercase
        } 
        else if(ch >= 'A' && ch <= 'Z') {
            str[i] = ch + 32;  // convert to lowercase
        }
        i++;
    }

    
    printf("String after toggling case: %s\n", str);

    return 0;
}
