#include <stdio.h>

int main() {
    int a, b, c, largest;

    // Input three numbers
    printf("Enter three numbers: ");
    scanf("%d %d %d", &a, &b, &c);

    // Find the largest using if-else
    if (a >= b && a >= c) {
        largest = a;
    } 
    else if (b >= a && b >= c) {
        largest = b;
    } 
    else {
        largest = c;
    }

    // Display result
    printf("The largest number is %d\n", largest);

    return 0;
}
