#include <stdio.h>

int main() {
    int n;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Taking array input
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int largest = arr[0];
    int s_largest = -1;   // or very small number

    // Step 1: Find largest
    for (int i = 1; i < n; i++) {
        if (arr[i] > largest)
            largest = arr[i];
    }

    // Step 2: Find second largest
    for (int i = 0; i < n; i++) {
        if (arr[i] > s_largest && arr[i] != largest)
            s_largest = arr[i];
    }

    printf("Second largest = %d", s_largest);

    return 0;
}
