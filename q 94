#include <stdio.h>
#include <string.h>

int main() {
    char sentence[200];
    char word[50];
    int i = 0, j = 0, maxLength = 0;
    char longestWord[50] = "";

    // Input sentence
    printf("Enter a sentence: ");
    fgets(sentence, sizeof(sentence), stdin);

    // Traverse the sentence word by word
    while(1) {
        if(sentence[i] != ' ' && sentence[i] != '\0' && sentence[i] != '\n') {
            word[j] = sentence[i];
            j++;
        } else {
            if(j > 0) {  // end of a word
                word[j] = '\0';
                if(j > maxLength) {
                    maxLength = j;
                    strcpy(longestWord, word);
                }
                j = 0;  // reset for next word
            }
            if(sentence[i] == '\0' || sentence[i] == '\n') break;
        }
        i++;
    }

    printf("The longest word is: %s\n", longestWord);
    printf("Length of the longest word: %d\n", maxLength);

    return 0;
}
