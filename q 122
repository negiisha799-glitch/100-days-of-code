#include <stdio.h>

int main() {
    FILE *fp;
    char line[200];  // buffer to store each line

    // Open the file in read mode
    fp = fopen("info.txt", "r");
    if (fp == NULL) {
        printf("Error: Could not open file info.txt\n");
        return 1; // exit if file not found or cannot be opened
    }

    printf("Contents of info.txt:\n\n");

    // Read and print each line until EOF
    while (fgets(line, sizeof(line), fp) != NULL) {
        printf("%s", line);
    }

    // Close the file
    fclose(fp);

    printf("\n\nEnd of file reached.\n");

    return 0;
}
