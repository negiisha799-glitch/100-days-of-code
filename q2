#include <stdio.h>

int main() {
    int a, b;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    int sum = a + b;
    int diff = a - b;
    int product = a * b;

    printf("Sum = %d, Diff = %d, Product = %d", sum, diff, product);

    if (b != 0) {
        float quotient = (float)a / b;
        printf(", Quotient = %.2f\n", quotient);
    } else {
        printf(", Quotient = Undefined (division by zero)\n");
    }

    return 0;
}
